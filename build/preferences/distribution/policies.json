{
  "policies": {
    "DisableAppUpdate": true,
    "DisableSystemAddonUpdate": true,
    "DisableTelemetry": true,
    "DisableFirefoxStudies": true,
    "DisableFirefoxAccounts": true,
    "DisableFirefoxView": true,
    "DisablePocket": true,
    "DisableFeedbackCommands": true,

    "DNSOverHTTPS": {
      "Enabled": false,
      "Locked": true
    },

    "CaptivePortal": false,
    "NetworkPrediction": false,
    "DontCheckDefaultBrowser": true,

    "OverrideFirstRunPage": "http://i2pd.i2p/",
    "OverridePostUpdatePage": "",

    "Proxy": {
      "Mode": "manual",
      "HTTPProxy": "127.0.0.1:4444",
      "SSLProxy": "127.0.0.1:4444",
      "FTPProxy": "127.0.0.1:4444",
      "UseProxyForDNS": true
    },

    "SearchEngines": {
      "Default": "YaCy",
      "PreventInstalls": true,
      "Add": [
        {
          "Name": "YaCy",
          "URLTemplate": "http://legwork.i2p/yacysearch.html?query={searchTerms}"
        }
      ],
      "Remove": [
        "Google",
        "Bing",
        "DuckDuckGo",
        "Yahoo",
        "Amazon.com",
        "eBay",
        "Wikipedia (en)",
		"Perplexity"
      ]
    },

    "SearchSuggestEnabled": false,
	
	"FirefoxHome": {
		"Search": true,
		"TopSites": false,
		"Highlights": false,
		"Pocket": false,
		"Snippets": false,
		"SponsoredTopSites": false,
		"FirefoxView": false
	},

	"SupportMenu": { 
		"Title": "ILITA IRC", 
		"URL": "http://irc.r4sas.i2p/?nick=WebClient...&channels=dev%2Cen%2Cru&prompt=1&uio=OT10cnVlde"
	},

    "Permissions": {
      "Camera": { "BlockNewRequests": true },
      "Microphone": { "BlockNewRequests": true },
      "Location": { "BlockNewRequests": true }
    },

    "Preferences": {
      "browser.ml.chat.enabled": false,
      "browser.ml.chat.menu": false,
      "browser.ml.chat.sidebar": false,
      "browser.ml.chat.page": false,
      "browser.ml.chat.shortcuts": false,
      "sidebar.notification.badge.aichat": false
    }
  }
}